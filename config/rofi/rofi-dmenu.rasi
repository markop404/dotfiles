* {
    background-color: #2b303b;
    color: #ffffff;
    height: 27px;
    font: "Roboto 11";
}

#window {
    location: north;
    width: 100%;
    children: [ entry, listview ];
    orientation: horizontal;
}

#listview {
    layout: horizontal;
}

#entry {
    expand: false;
    width: 10em;
    padding: 3px 8px;
}

#element {
    padding: 3px 15px;
}

#element selected {
    background-color: #6d6d6d;
}

element-text {
    background-color: inherit;
}

